<view  class="fix-bottom" style="background-color: #ffffff;padding: 14px;border-top:1px solid #EBE9E9 ;">
    <view class="cus-row cus-row-v-m">
        <view class="cus-row-col-6" style="display: inline-block;">
            <text class="fs-24-fc-212229">￥</text><text class="fs-24-fc-212229" id="price_label">{{productAttr.price}}</text>
        </view>
        <view class="cus-row-col-6" style="display: inline-block;">
            <text class="btn-block1 m-t-20" bindtap="pay" style="margin-top: 0;font-size:12px;" >立即付款</text>
        </view>
    </view>
</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">购买方式:</view>
        </view>
        <view class="weui-cell__bd l-h-48">
           报单
        </view>
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">购买数量:</view>
        </view>
        <view class="weui-cell__bd l-h-48">
            12箱
        </view>
    </view>
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">邀请人:</view>
        </view>
        <view class="weui-cell__bd">
            <input wx:if="{{!recommondPhone}}" class="weui-input" value="" type="number" bindinput="bindPhoneInput" maxlength="11" placeholder="请输入上级会员手机号"/>
            <label style="line-height: 44px;" wx:if="{{recommondPhone}}">{{recommondPhone}}</label>
        </view>
    </view>
</view>