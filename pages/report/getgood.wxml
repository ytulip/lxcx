<!--logs.wxml-->
<view>



    <view class="fix-bottom2 t-al-c" wx:if="{{layerShow}}">
        <view class="cus-row" style="padding: 0 16px;border-bottom: 1px solid #eeeeee;border-top: 1px solid #eeeeee">
            <view class="cus-row-col-2 fs-14-fc-95909E v-a-m" style="line-height: 40px;" bindtap="cancelPCT">
                取消
            </view>
            <view class="cus-row-col-8">

            </view>
            <view class="cus-row-col-2 fs-14-fc-5EC11A v-a-m t-al-r" style="line-height: 40px;" bindtap="choosePCT">
                确定
            </view>
        </view>
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 220px;font-size: 14px;color: #484848;" value="{{value}}" bindchange="bindChange">
            <picker-view-column>
                <view wx:for="{{years}}" style="line-height: 50px">{{item}}</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{months}}" style="line-height: 50px">{{item}}</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{days}}" style="line-height: 50px">{{item}}</view>
            </picker-view-column>
        </picker-view>
    </view>

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                   <view style="line-height: 48px;">剩余可提货箱数:{{total}}</view>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="line-height: 48px;">本月可提货箱数:{{(thisMonth > total)?total:thisMonth}}</view>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view style="line-height: 48px;">请选择提货数量:</view>
                    <picker bindchange="bindPickerChange" value="{{quantityIndex}}" range="{{quantityArr}}" style="line-height: 44px;">
                        <view class="picker">
                            {{quantityArr[quantityIndex]}}
                        </view>
                    </picker>
                </view>
            </view>


            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">收货方式</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindPickerChange2" value="{{index}}" range="{{array}}" style="line-height: 44px;">
                        <view class="picker">
                            {{array[index]}}
                        </view>
                    </picker>
                </view>
            </view>

            <view class="weui-cell weui-cell_input" wx:if="{{index == 1}}">
                <view class="weui-cell__hd">
                    <view class="weui-label">自提地址</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindSelfPickerChange" value="{{index}}" range="{{selfGetArray}}">
                        <text style="height:96px;padding-top:4px;padding-bottom:4px;overflow:ellipsis;">{{selfGetArray[selfGetIndex]}}</text>
                    </picker>
                </view>
            </view>


            <view class="weui-cell weui-cell_input" wx:if="{{index == 0}}">
                <view class="weui-cell__hd">
                    <view class="weui-label" style="line-height: 44px;">收货地址</view>
                </view>
                <view class="weui-cell__bd" bindtap="pctSwitch" style="height: 44px;line-height: 44px;">
                    {{chooseText}}
                </view>
            </view>


            <view class="weui-cell weui-cell_input" wx:if="{{index == 0}}">
                <view class="weui-cell__hd">
                    <view class="weui-label">详细地址</view>
                </view>
                <view class="weui-cell__bd">
                    <textarea style="height:96px;padding-top:4px;padding-bottom:4px;overflow:ellipsis;" bindinput="bindAddressInput"></textarea>
                </view>
            </view>

        </view>

    <view class="fs-14-fc-484848" style="margin-top: 6px;padding: 0 15px;" wx:if="{{index == 0}}">我们将采用运费到付的方式，每箱运费20元左右，根据您所在地区有所差异</view>

    <view style="padding:20px;"><button class="weui-btn" type="primary" bindtap="pay">提货</button></view>

</view>

